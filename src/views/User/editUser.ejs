    <style>
        .show {
            width: calc(var(--nav-width) + 156px);
        }

        .check-box {}

        input[type="checkbox"] {
            position: relative;
            appearance: none;
            width: 40px;
            height: 20px;
            background: #ccc;
            border-radius: 50px;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: 0.4s;
        }

        input:checked[type="checkbox"] {
            background: #7da6ff;
        }

        input[type="checkbox"]::after {
            position: absolute;
            content: "";
            width: 20px;
            height: 20px;
            top: 0;
            left: 0;
            background: #fff;
            border-radius: 50%;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            transform: scale(1.1);
            transition: 0.4s;
        }

        input:checked[type="checkbox"]::after {
            left: 50%;
        }

        .checkbox-container {
            display: flex;
            /* Sử dụng flexbox để đặt các phần tử nằm ngang */
            align-items: center;
            /* Căn các phần tử theo chiều dọc */
            flex-direction: row;
        }
    </style>

