                  </div>
                </div>
                <hr />

                <table id="productTable" class="table table-bordered table-hover" style="width: 100%">
                  <thead class="table-light">
                    <tr>
                      <th>ID</th>
                      <th>Tên</th>
                      <th>Danh mục</th>
                      <th>Hình ảnh</th>
                      <th>Giá tiền</th>
                      <th>Mô tả</th>
                      <th>Màu sắc</th> <!-- New column for Color -->
                      <th>Kích thước</th> <!-- New column for Size -->
                      <th>Số lượng tồn</th> <!-- New column for Stock -->
                      <th>Chức năng</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.map((product)=> { %>
                      <tr>
                        <td style="width: 50px;text-align: center;">
                          <a href="products/detail/<%= product.id %>" class="text-black">
                            <%= product.id %>
                          </a>
                        </td>
                        <td style="max-width: 150px">
                          <%= product.name %>
                        </td>
                        <td>
                          <%= product.category.name %>
                        </td>
                        <td class="text-center">
                          <img class="product-img" src="<%= product.thumbnail %>" alt="!lỗi hiển thị ảnh" />
                        </td>
                        <td>
                          <%= (product.price).toLocaleString('vi-VN', { style: 'currency' , currency: 'VND' }) %>
                        </td>

                        <td>
                          <div class="short-description">
                            <%= product.description.slice(0, 50) %>
                              <%= product.description.length> 50 ? '...' : '' %>
                                <span class="more-content" style="display: none;">
                                  <%= product.description.slice(50) %>
                                </span>
                                <a href="#" class="show-more">Xem thêm</a>
                          </div>
                        </td>
                        <!-- Individual columns for Color, Size, and Stock -->
                        <td>
                          <% product.ProductDetails.forEach((detail)=> { %>
                            <%= detail.color %><br />
                              <% }); %>
                        </td>
                        <td>
                          <% product.ProductDetails.forEach((detail)=> { %>
                            <%= detail.size %><br />
                              <% }); %>
                        </td>
                        <td>
                          <% product.ProductDetails.forEach((detail)=> { %>
                            <%= detail.stock %><br />
                              <% }); %>
                        </td>
                        <td class="" style="width: 150px;">
                          <button class="btn btn-primary  trash" data-bs-toggle="modal"
                            data-bs-target="#comfirmDeleteModal" onclick="onDeleteProduct('<%= product.id %>')">
                            <i class="fas fa-trash-alt"></i>
                          </button>
                          <a class="btn btn-success edit" href="/admin/products/edit/<%= product.id %>">
                            <i class="fas fa-edit"></i>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>


