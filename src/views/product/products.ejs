                  e.preventDefault();
                  const moreContent = this.previousElementSibling;
                  moreContent.style.display = 'inline'; // Hiển thị nội dung chi tiết
                  this.style.display = 'none'; // Ẩn nút Xem thêm
                });
              });
            });
